<div class="text-center">
<h1> <%= @grid %></h1>
<p><%= Time.now() %></p>
</div>

<div class="text-center">
  <form action="/score" method="get">
    <label for="word">Guess the longest word</label>
    <input type="hidden" name="start_time" value="<%= @start_time %>">
    <input type="text" id="word" name="word" placeholder="What's your guess?">
    <input type="submit" value="Guess!">
    <input type="hidden" name="grid" value="<%= @grid.join %>">
  </form>
</div>




